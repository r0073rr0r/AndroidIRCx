{
  "$schema": "./service-schema.json",
  "serviceType": "generic",
  "ircdType": "charybdis",
  "version": "1.0.0",
  "services": {},
  "ircd": {
    "userModes": [
      {
        "mode": "i",
        "name": "invisible",
        "description": "Invisible"
      },
      {
        "mode": "D",
        "name": "deaf",
        "description": "Deaf"
      },
      {
        "mode": "g",
        "name": "callerid",
        "description": "Caller ID"
      },
      {
        "mode": "l",
        "name": "hidechans",
        "description": "Hide channels"
      },
      {
        "mode": "p",
        "name": "hidehost",
        "description": "Hide host"
      },
      {
        "mode": "Q",
        "name": "noforward",
        "description": "No forward"
      },
      {
        "mode": "R",
        "name": "regonlymsg",
        "description": "Reg only PM"
      },
      {
        "mode": "Z",
        "name": "ssl",
        "description": "SSL"
      },
      {
        "mode": "w",
        "name": "wallops",
        "description": "Wallops"
      },
      {
        "mode": "s",
        "name": "snomask",
        "description": "Snomask",
        "operOnly": true
      },
      {
        "mode": "o",
        "name": "oper",
        "description": "Oper",
        "operOnly": true
      }
    ],
    "channelModes": [
      {
        "mode": "b",
        "type": "list",
        "name": "ban",
        "description": "Ban"
      },
      {
        "mode": "e",
        "type": "list",
        "name": "except",
        "description": "Exception"
      },
      {
        "mode": "I",
        "type": "list",
        "name": "invex",
        "description": "Invite exception"
      },
      {
        "mode": "q",
        "type": "list",
        "name": "quiet",
        "description": "Quiet"
      },
      {
        "mode": "i",
        "type": "set",
        "name": "inviteonly",
        "description": "Invite only"
      },
      {
        "mode": "m",
        "type": "set",
        "name": "moderated",
        "description": "Moderated"
      },
      {
        "mode": "n",
        "type": "set",
        "name": "noexternal",
        "description": "No external"
      },
      {
        "mode": "p",
        "type": "set",
        "name": "private",
        "description": "Private"
      },
      {
        "mode": "s",
        "type": "set",
        "name": "secret",
        "description": "Secret"
      },
      {
        "mode": "t",
        "type": "set",
        "name": "topiclock",
        "description": "Topic lock"
      },
      {
        "mode": "r",
        "type": "set",
        "name": "registered",
        "description": "Registered"
      },
      {
        "mode": "z",
        "type": "set",
        "name": "opmoderated",
        "description": "Op moderated"
      },
      {
        "mode": "k",
        "type": "param",
        "name": "key",
        "description": "Key"
      },
      {
        "mode": "l",
        "type": "param",
        "name": "limit",
        "description": "Limit"
      },
      {
        "mode": "f",
        "type": "param",
        "name": "forward",
        "description": "Forward (+l/i)"
      },
      {
        "mode": "v",
        "type": "prefix",
        "prefix": "+",
        "name": "voice",
        "description": "Voice"
      },
      {
        "mode": "h",
        "type": "prefix",
        "prefix": "%",
        "name": "halfop",
        "description": "Half-op"
      },
      {
        "mode": "o",
        "type": "prefix",
        "prefix": "@",
        "name": "op",
        "description": "Op"
      }
    ],
    "commands": [
      {
        "name": "OPER",
        "description": "Become oper",
        "usage": "OPER <user> <pass>",
        "operOnly": false
      },
      {
        "name": "REHASH",
        "description": "Rehash",
        "usage": "REHASH",
        "operOnly": true
      },
      {
        "name": "DIE",
        "description": "Die",
        "usage": "DIE",
        "operOnly": true
      },
      {
        "name": "KILL",
        "description": "Kill",
        "usage": "KILL <nick> :<reason>",
        "operOnly": true
      },
      {
        "name": "KLINE",
        "description": "Kline",
        "usage": "KLINE <mask> [time] :<reason>",
        "operOnly": true
      },
      {
        "name": "DLINE",
        "description": "Dline (IP)",
        "usage": "DLINE <ip> [time] :<reason>",
        "operOnly": true
      },
      {
        "name": "XLINE",
        "description": "Xline (realname)",
        "usage": "XLINE <mask> [time] :<reason>",
        "operOnly": true
      },
      {
        "name": "RESV",
        "description": "Reserve nick/chan",
        "usage": "RESV <nick|chan> [time] :<reason>",
        "operOnly": true
      },
      {
        "name": "TESTLINE",
        "description": "Test mask",
        "usage": "TESTLINE <mask>",
        "operOnly": true
      },
      {
        "name": "OPERSPY",
        "description": "Operspy mode",
        "usage": "OPERSPY <command>",
        "operOnly": true
      }
    ],
    "extendedBans": [
      {
        "prefix": "~a:",
        "type": "account",
        "description": "Account",
        "example": "+b ~a:baduser"
      },
      {
        "prefix": "~c:",
        "type": "channel",
        "description": "Channel",
        "example": "+b ~c:#bad"
      },
      {
        "prefix": "~n:",
        "type": "nick",
        "description": "Nick",
        "example": "+b ~n:badnick"
      },
      {
        "prefix": "~r:",
        "type": "realname",
        "description": "Realname",
        "example": "+b ~r:*bot*"
      },
      {
        "prefix": "~s:",
        "type": "server",
        "description": "Server",
        "example": "+b ~s:bad.server"
      },
      {
        "prefix": "~u:",
        "type": "user",
        "description": "User",
        "example": "+b ~u:badident"
      }
    ]
  }
}
